{
  "testSuites": [
    {
      "name": "Component Gallery",
      "url": "http://localhost:3001",
      "viewport": {
        "width": 1200,
        "height": 800
      },
      "tests": [
        {
          "name": "Homepage Layout",
          "selector": "main",
          "description": "Full gallery homepage with search and components"
        },
        {
          "name": "Component Cards Grid",
          "selector": "[data-testid='component-grid']",
          "description": "Component cards in grid view"
        },
        {
          "name": "Search Functionality",
          "selector": "[data-testid='search-bar']",
          "description": "Search bar and filters"
        }
      ]
    },
    {
      "name": "Example Pages",
      "url": "http://localhost:3001/examples",
      "viewport": {
        "width": 1200,
        "height": 800
      },
      "tests": [
        {
          "name": "Dashboard Example",
          "selector": "main",
          "description": "Complete dashboard with stats and charts"
        },
        {
          "name": "Stats Cards",
          "selector": "[data-testid='stats-cards']",
          "description": "Dashboard statistics cards"
        }
      ]
    }
  ],
  "browsers": ["chromium"],
  "outputDir": "./screenshots",
  "thresholds": {
    "similarity": 0.95,
    "antialiasing": true
  }
}